        </activity>
        <activity android:name=".AcercaDe">Acerca De</activity>
        <activity android:name=".RegistroActivity">Registro</activity>
        <activity android:name=".InicioActivity">Login</activity>
        <activity android:name=".ProfileActivity">Perfil</activity>
        <activity android:name=".NuevoAnuncioActivity">Nuevo Anuncio</activity>
        <activity android:name=".MisAnunciosActivity">Mis Anuncios</activity>
